@model IEnumerable<ZenithDataLib.Activity>

@{
    ViewBag.Title = "Activity List";
}


<h2>Index</h2>
@if(User.IsInRole("Admin"))
{
    <p>
    @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ActivityCategoryId })<span>&nbsp;</span>
    @if (User.IsInRole("Admin"))
    {
            @Html.ActionLink("Edit", "Edit", new { id = item.ActivityCategoryId })<span>&nbsp;</span>
            
            @Html.ActionLink("Delete", "Delete", new { id = item.ActivityCategoryId })
     }
        </td>
    </tr>
}

</table>
