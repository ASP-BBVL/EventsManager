@model IEnumerable<ZenithDataLib.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if(User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity.ActivityDescription)
        </th>
