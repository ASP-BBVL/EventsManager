            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnteredByUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
